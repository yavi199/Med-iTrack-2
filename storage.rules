rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /reports/{reportId} {
      allow read, write: if request.auth != null;
    }

    // Permitir a los usuarios autenticados leer y escribir en la carpeta de remisiones
    match /remissions/{path=**} {
      allow read, write: if request.auth != null;
    }
  }
}
